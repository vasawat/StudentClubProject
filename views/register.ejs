<%- include('header') %>
<center>
<div class="formlogin">
    <form action="/user/register" method="POST">
      <div class="mb-3">
        <center><img class="LoginRegisimg" src="/images/key.png" alt="" width="70px"></center>
      </div>
      <% if (errors != null && errors.length > 0) { %>
      <% for(let i = 0; i < errors.length; i++ ) { %>
        <p class="alert alert-danger">
          <%= errors[i] %>
        </p>
        <% } %>
      <% } %>
      <div class="mb-3">
        <label  class="form-label text-dark">Email address</label>
        <input type="email" class="form-control" value="<%= username %>" name="username" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label  class="form-label text-dark">Password</label>
        <input type="password" class="form-control" <%= password %> name="password">
      </div>
      <center><button type="submit" class="btn btn-primary LoginRegisbtn">Register</button></center>
    </form>
    </div>
</center>
<%- include('footer') %>